        android:layout_width="388dp"
        android:layout_height="551dp"
        android:layout_margin="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
