        android:src="@drawable/iphoneicon"
        tools:srcCompat="@drawable/iphoneicon" />

    <TextView
        android:id="@+id/Usuario"
        android:layout_width="186dp"
        android:layout_height="33dp"
        android:layout_marginTop="53dp"
