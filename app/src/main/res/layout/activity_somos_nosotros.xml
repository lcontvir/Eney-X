<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity_SomosNosotros">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="230dp"
        android:alpha="0.3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="-66dp"
        tools:srcCompat="@drawable/logoeneyx" />

    <TextView
        android:id="@+id/titulo"
        style="@style/Titulo"
        android:layout_width="381dp"
        android:layout_height="73dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/boton_bordes_blancos"
        android:includeFontPadding="true"
        android:padding="14dp"
        android:paddingRight="20dp"
        android:text="Nosotros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageViewSeparator"
        android:layout_width="450dp"
        android:layout_height="5dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageViewSeparator4"
        android:layout_width="6dp"
        android:layout_height="80dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="651dp"
        android:layout_marginEnd="125dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewSeparator3"
        android:layout_width="6dp"
        android:layout_height="80dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="651dp"
        android:layout_marginEnd="285dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/casa"
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="663dp"
        android:layout_marginEnd="320dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/casa" />

    <ImageButton
        android:id="@+id/escudo"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="665dp"
        android:layout_marginEnd="173dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/escudo" />

    <ImageButton
        android:id="@+id/ajustes"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginStart="314dp"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="29dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ajustes" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:background="@drawable/boton_bordes_blancos"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@drawable/logofacebook" />

        <ImageView
            android:id="@+id/x"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@drawable/instagram" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/flechaVolver"
        android:layout_width="89dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:background="@color/transparente"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titulo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flechamoradablancarellenaizquierda" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="375dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitulo"
                style="@style/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:text="@string/quienesSomos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titulo" />

            <ImageView
                android:id="@+id/imagenNosotros"
                android:layout_width="324dp"
                android:layout_height="202dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/boton_bordes_blancos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitulo"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/nosotros" />
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>