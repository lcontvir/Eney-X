<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity_componente_unico">

    <TextView
        android:id="@+id/unico_vpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/boton_bordes_blancos"
        android:padding="5dp"
        android:text="         VPN     "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/layout_componente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="231dp"
        android:layout_height="230dp"
        android:layout_marginStart="252dp"
        android:layout_marginBottom="628dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/logoeneyx" />

    <LinearLayout
        android:id="@+id/layout_componente"
        android:layout_width="361dp"
        android:layout_height="544dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check1"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/vpn_plus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="VPN PLUS"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check2"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/ip_plus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="IP PLUS"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check3"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/red_max"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="RED MAX"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check4"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/lan_splus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="LAN SPLUS"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check5"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/protector_plus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="PROTECCION PLUS"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check6"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/cross" />

            <Button
                android:id="@+id/red_privada_plus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_bordes_blancos"
                android:text="RED PRIVADA PLUS"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/flecha_atras"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/background"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/unico_vpn"
        app:srcCompat="@drawable/flechamoradablancarellenaizquierda" />

</androidx.constraintlayout.widget.ConstraintLayout>