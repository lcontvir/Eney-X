<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity"


    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="173dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/PerfilUsuarioFotoCarnet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/EstiloImagenCircular" />

    <TextView
        android:id="@+id/MensajeBienvenida"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="¡Nos alegra tenerle de vuelta !"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="202dp"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.3"
        app:layout_constraintBottom_toTopOf="@+id/dispositivo"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        tools:srcCompat="@drawable/LogoEney" />


    <TextView
        android:id="@+id/dispositivo"
        android:layout_width="185dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:text="budacristo@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="88dp"
        android:text="Martin Buda Cristo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botonCasita"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white"
        tools:src="@drawable/PerfilUsuarioCasa" />

    <ImageButton
        android:id="@+id/botonCasita7"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/PerfilUsuarioEscudo" />

    <ImageButton
        android:id="@+id/botonCasita8"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Botón de casita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        tools:src="@drawable/PerfilUsuarioAjustes" />

    <Button
        android:id="@+id/button11"
        style="@style/EstiloBotonRectangular"
        android:layout_width="375dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="#300676"
        android:text="¿Necesitas mas informacion?"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSeparator4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Licencias"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dispositivo" />

    <Button
        android:id="@+id/button"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Privacidad"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="166dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:alpha="0.1"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7"
        tools:srcCompat="@drawable/PerfilUsuarioDispositivos" />

    <Button
        android:id="@+id/button8"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Facturacion"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="178dp"
        android:layout_height="132dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button6"
        tools:srcCompat="@drawable/PerfilUsuarioLlaves" />

    <Button
        android:id="@+id/button7"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Dispositivos"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="173dp"
        android:layout_height="129dp"
        android:layout_marginEnd="27dp"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        tools:srcCompat="@drawable/PerfilUsuarioCandado" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="175dp"
        android:layout_height="129dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:alpha="0.1"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8"
        tools:srcCompat="@drawable/PerfilUsuarioCartera2" />

    <ImageView
        android:id="@+id/imageViewSeparator"
        android:layout_width="450dp"
        android:layout_height="5dp"
        android:layout_marginTop="19dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintBottom_toTopOf="@+id/botonCasita7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <ImageView
        android:id="@+id/imageViewSeparator3"
        android:layout_width="6dp"
        android:layout_height="110dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintEnd_toStartOf="@+id/botonCasita7"
        app:layout_constraintStart_toEndOf="@+id/botonCasita"
        app:layout_constraintTop_toTopOf="@+id/imageViewSeparator" />

    <ImageView
        android:id="@+id/imageViewSeparator4"
        android:layout_width="6dp"
        android:layout_height="110dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="23dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintEnd_toStartOf="@+id/botonCasita8"
        app:layout_constraintStart_toStartOf="@+id/botonCasita7"
        app:layout_constraintTop_toTopOf="@+id/botonCasita7" />

    <TextView
        android:id="@+id/Opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tus opciones: "
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>


