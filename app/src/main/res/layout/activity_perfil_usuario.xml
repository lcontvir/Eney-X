<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity_perfilUsuario"


    >

    <View
        android:id="@+id/navvar"
        android:layout_width="411dp"
        android:layout_height="81dp"
        android:background="@drawable/navvar_bloque"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/botonAjustes"
        android:layout_width="136dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Boton Ajustes"
        android:scaleType="fitCenter"
        android:src="@drawable/ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonEscudo"
        app:tint="@color/Blanco" />

    <ImageButton
        android:id="@+id/botonCasa"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Boton casa"
        android:scaleType="fitCenter"
        android:src="@drawable/casa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonEscudo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/botonEscudo"
        android:layout_width="136dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Boton Escudo"
        android:scaleType="fitCenter"
        android:src="@drawable/escudo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonAjustes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonCasa" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/PerfilUsuario"
        android:layout_width="174dp"
        android:layout_height="173dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatarmujer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/EstiloImagenCircular" />

    <TextView
        android:id="@+id/MensajeBienvenida"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="¡Nos alegra tenerle de vuelta !"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/PerfilUsuario"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Dispositivo"
        android:layout_width="185dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:text="budacristo@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/PerfilUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="88dp"
        android:text="Martin Buda Cristo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BotonInformacion"
        style="@style/EstiloBotonRectangularAzul"
        android:layout_width="375dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="20dp"
        android:text="¿Necesitas mas informacion?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BotonLicencias"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Licencias"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BotonPrivacidad"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Privacidad"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonLicencias" />

    <ImageView
        android:id="@+id/ImagenDispositivos"
        android:layout_width="166dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/dispositivos"
        app:layout_constraintStart_toStartOf="@+id/BotonDispositivos"
        app:layout_constraintTop_toTopOf="@+id/BotonDispositivos"
        tools:srcCompat="@drawable/dispositivos" />

    <ImageView
        android:id="@+id/ImagenLicencias"
        android:layout_width="166dp"
        android:layout_height="116dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/k"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BotonLicencias"
        tools:srcCompat="@drawable/k" />

    <ImageView
        android:id="@+id/ImagenPrivacidad"
        android:layout_width="162dp"
        android:layout_height="124dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/candado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/BotonPrivacidad"
        app:layout_constraintTop_toTopOf="@+id/BotonPrivacidad"
        tools:srcCompat="@drawable/candado" />

    <ImageView
        android:id="@+id/ImagenFacturacion"
        android:layout_width="162dp"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/cartera"
        app:layout_constraintStart_toStartOf="@+id/BotonFacturacion"
        app:layout_constraintTop_toTopOf="@+id/BotonFacturacion"
        tools:srcCompat="@drawable/cartera" />

    <Button
        android:id="@+id/BotonFacturacion"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Facturacion"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PerfilUsuario" />

    <Button
        android:id="@+id/BotonDispositivos"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_bordes_blancos"
        android:text="Dispositivos"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonFacturacion" />

    <TextView
        android:id="@+id/Opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tus opciones: "
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PerfilUsuario" />


</androidx.constraintlayout.widget.ConstraintLayout>


