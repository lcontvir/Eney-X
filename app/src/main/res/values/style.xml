<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Titulo">
        <item name="background">@drawable/boton_bordes_blancos</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/texto</item>
        <item name="android:textSize">34dp</item>
    </style>
    <style name="texto">
        <item name="android:textColor"> @color/texto</item>
        <item name="android:textSize"> 20dp</item>
    </style>

    <style name="BotonGrande">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_bordes_blancos</item> <!-- Aplica el fondo redondeado -->
        <item name="android:scaleType">centerInside</item>



    </style>
    <style name="BotonComponentes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/botonhome</item> <!-- Aplica el fondo redondeado -->
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">28sp</item>
        <item name="backgroundTint">#BA0055FF</item>

    </style>
    <style name="BotonesAbajo">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_bordes_blancos</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">28sp</item>


    </style>
    <style name="fuente">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>

    </style>
    <style name="principal">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">#595959</item>
    </style>




</resources>
